<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Text="{Binding AusgabeText}" TextColor="White" FontSize="30" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Button Grid.Row="1" HeightRequest="50" Command="{Binding AusgabeCommand}" Text="Wetter generieren" />

        </Grid>
    </StackLayout>

</ContentPage>
